from datetime import date

def calculate_age(birth_year, birth_month, birth_day):
    """
    Calculates the age in years based on the provided birth date.

    Args:
        birth_year (int): The birth year.
        birth_month (int): The birth month (1-12).
        birth_day (int): The birth day (1-31).

    Returns:
        int: The calculated age in years.
    """
    today = date.today()
    birthdate = date(birth_year, birth_month, birth_day)

    age = today.year - birthdate.year

    # Adjust age if the birthday hasn't occurred yet in the current year
    if (today.month, today.day) < (birthdate.month, birthdate.day):
        age -= 1
    
    return age

# Example usage:
year = int(input("Enter your birth year (YYYY): "))
month = int(input("Enter your birth month (MM): "))
day = int(input("Enter your birth day (DD): "))

age_calculated = calculate_age(year, month, day)
print(f"You are {age_calculated} years old.")
